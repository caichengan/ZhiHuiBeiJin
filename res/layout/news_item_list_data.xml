<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp">
    <ImageView
        android:id="@+id/img_list_data"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:padding="1dp" 
        android:background="@android:color/darker_gray"
         android:src="@drawable/pic_item_list_default"/>

    <TextView
        android:id="@+id/news_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_list_data"
        android:lines="2"
        android:textColor="@android:color/black"
        android:text="jdd"/>
    <TextView
        android:id="@+id/news_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_list_data"
        android:layout_below="@id/news_list_text"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@android:color/black"
        android:text="時間" />
    <View 
        android:id="@+id/img_list_share"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_below="@id/news_list_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:background="@drawable/icon_news_comment_num"/>
</RelativeLayout>
</LinearLayout>