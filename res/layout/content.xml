<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 上部区域 -->

    <com.cca.zhihui.widget.NoTouchViewPager
        android:id="@+id/content_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- 下部区域 -->

    <RadioGroup
        android:id="@+id/content_tab_rad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab_home"
            style="@style/tab_radio_btn"
            android:drawableTop="@drawable/tab_btn_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/tab_news"
            style="@style/tab_radio_btn"
            android:drawableTop="@drawable/tab_btn_news"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/tab_smaster"
            style="@style/tab_radio_btn"
            android:drawableTop="@drawable/tab_btn_smaster"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/tab_gov"
            style="@style/tab_radio_btn"
            android:drawableTop="@drawable/tab_btn_gov"
            android:text="政务" />

        <RadioButton
            style="@style/tab_radio_btn"
            android:id="@+id/tab_setting"
            android:drawableTop="@drawable/tab_btn_setting"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>